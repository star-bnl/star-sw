  my $output_file4 = basename($OUTPUT_FILE4);
  my $output_file5 = basename($OUTPUT_FILE5);
  my $output_file6 = basename($OUTPUT_FILE6);
  my $output_file7 = basename($OUTPUT_FILE7);
  my $output_file8 = basename($OUTPUT_FILE8);
