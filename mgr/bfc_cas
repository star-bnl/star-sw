print $cmd,"\n";
system $cmd;
system 'echo "Finished job execution at" `date` " on " `hostname`'; 

exit 0;
#______________________________________________________
sub convert($) {
  my $new_name = @_[0];
  $new_name =~ s'/home/starreco/reco'/star/data14/MDC4/reco'g;
  return $new_name;
}
