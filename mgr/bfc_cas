my $nSeq;
my $Nevts;
my $nSeqi;
my $Nev_first;
my $Nev_last;
my $NofEvents = 100;
my @prt;

my $outfl = $outfile; 
$outfile =~ s/dst.root/root/g;
@prt = split("_", $outfl);
$nSeq = $prt[1];
$evts = $prt[2];
($Nevts,$dummy) = split /e/, $evts;
#$NofEvents = $Nevts * $nSeq;
#$NofEvents = 500;
my $N3 = $Nevts * abs($nSeq - 1);
my $N1 = $N3 + 1;
my $N2 = $Nevts * $nSeq + 1;

my $inputcs = " gfile B " . $bfile .";" . " mode SVTT back  22122; mode FTPC back  000;  mode TPCE back 1881188; gback 188 188 0.0213 213. 15.; rndm $N1 $N2; skip $N3 ";
