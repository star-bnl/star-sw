                    }
                    push @subdirs, $subsub_DIR;
                    print "================== add $subsub_DIR\n"
                      if ($param::debug);
                }
            }
        }
        if ( $sub_dir =~ /Pool$/ )   { next; }
        if ( $sub_dir =~ /Client$/ ) { next; }
        push @subdirs, $sub_DIR;
        print "================== add $sub_DIR\n" if ($param::debug);
    }
}




