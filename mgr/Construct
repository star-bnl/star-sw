    $installdir = $INCLUDE . "/Vc";
    if ($dir =~ /common$/) {$installdir .= "/common";}
    if ($dir =~ /simple$/) {$installdir .= "/simple";}
    if ($dir =~ /sse$/)    {$installdir .= "/sse";}
  }
  if ($dir =~ /tbb/) {
    $installdir .= "/tbb";
    if ($dir =~ /machine$/) {$installdir .= "/machine";}
  }
  print "$dir => $installdir\n" if ($param::debug);
