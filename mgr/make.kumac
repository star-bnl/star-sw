macro make 
on error exitm
filecase KEEP
if [#]>0 then
for pam in [*]
  t = $word([pam],1,1,'/')
  if $index([t],'g2t')>0 .or. $index([t],'gstar')>0 then
    p = pams/sim/[pam]
  elseif $index([t],'pams')<1 then
    p = pams/[pam]
  else
    p = [pam]
  endif 
  exec makes pam=[p]
endfor
else
for pam in geometry  mwc sim/g2t sim/gstar svt vpd ctf ftpc magnet tpc emc global
   exec makes pam=pams/[pam]
endfor
endif
filecase RESTORE
return
