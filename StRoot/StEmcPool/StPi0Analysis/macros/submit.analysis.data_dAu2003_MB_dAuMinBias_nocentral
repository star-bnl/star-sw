#!/bin/bash

# Recognized dAu2003 centrality tags:
# nocentral  No centrality selection, no FTPC good runs selection, maximum statistics
# 0-100      All centralities, FTPC good runs only
# 0-20       Most central events
# 20-40      Mid central events
# 40-100     Most peripheral events
# 40-80      Most peripheral events, beam bg suppressed
# 40-75      Most peripheral events, beam bg suppressed
# 40-60      Most peripheral events, beam bg suppressed
# 40-65      Most peripheral events, beam bg suppressed
# 40-60      Most peripheral events, beam bg suppressed
# 80-100     Most peripheral events, mostly beam bg
# 75-100     Most peripheral events, mostly beam bg
# 70-100     Most peripheral events, mostly beam bg
# 65-100     Most peripheral events, mostly beam bg
# 60-100     Most peripheral events, mostly beam bg

set_option 'files_per_job_analysis=1'

export ANALYSIS_NAME='Real data dAu2003 analysis (no centrality selection) - MinBias from dAuMinBias dataset'
export ANALYSIS_TAG='data_dAu2003'
export ANALYSIS_SUBTAG=$ANALYSIS_TAG'_MB_dAuMinBias_nocentral'
export ANALYSIS_DATA=$DATA_PATH'/data_dAu2003/dAu2003MinBias_*.root'
export ANALYSIS_CONFIG='noweight useMB dAu2003 nocentral'
export ANALYSIS_WEIGHT=''
export ANALYSIS_OUTDIR=$DATAOUT_PATH'/data_dAu2003'
export ANALYSIS_FINALDIR=$DATAFINAL_PATH'/'
