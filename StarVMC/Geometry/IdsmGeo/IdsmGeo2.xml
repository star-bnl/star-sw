    <Material name="CFRPMix"  />
    <Shape type="PCON" nz="6" phi1="0.0" dphi="360"
            zi="{-dzc, -dzc+0.6, -dzc+0.6, dzc-0.6, dzc-0.6, dzc}"
            rmn="{37.61, 36.30, 36.30    , 22.76, 21.6, 21.6}"
            rmx="{ 39.9, 39.9,  37.6, 24.06, 24.06, 22.75}" />

</Volume>

